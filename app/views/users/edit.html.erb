<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div class="error-box text-danger">
          <h3 class="error-num">
            <%= @user.errors.count %>
            <% if @user.errors.count == 1 %> error <% else %> errors <% end %> prohibited this obj from being saved:
          </h3>
          <% @user.errors.full_messages.each do |message| %>
            <p>ãƒ»<%= message %></p>
          <% end %>
        </div>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="nameForm">Name</label>
          <%= f.text_field :name, class:"form-control", id:"nameForm" %>
        </div>
        <div class="form-group">
          <label for="imageForm">Image</label>
          <%= f.attachment_field :profile_image, class:"form-control-file", id:"imageForm" %>
        </div>
        <div class="form-group">
          <label for="introductionForm">Introduction</label>
          <%= f.text_area :introduction, class:"form-control", id:"introductionForm" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>