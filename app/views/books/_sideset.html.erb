<div class="col-md-3">
  <h2>User Info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model:book, local:true do |f| %>
    <label for="titleForm">Title</label>
    <span><%= f.text_field :title,  class:"form-control", id:"titleForm" %></span>
    <label for="bodyForm">Option</label>
    <span><%= f.text_area :body, class:"form-control", id:"bodyForm" %></span>
    <%= f.submit 'Create Book', class:"btn btn-success mt-3" %>
  <% end %>
</div>